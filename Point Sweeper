float x, y, z, xInitial, yInitial, zInitial;
float dx = 1f;
float dy = 1f;

void setup(){
  size(800,800,P3D);
  translate(width/2,height/2,0);
  background(0);
  noSmooth();
  xInitial = width/2;
  yInitial = height/2;
  z = 1f;
  y = yInitial;
  x = xInitial;
}

void draw(){
  background(0);
  stroke(0,255,0);
  line(xInitial,yInitial,0, x,y,z);
  if(x == 800)
    dx = -1f;
  if(x == 0)
    dx = 1;
  x = x + dx;
}
